<button class="btn btn-primary" @onclick="@(() => _isOpen3 = true)">Show Modal 3</button>
	</WvpModalBody>
	<WvpModalFooter Class="p-1">
		<button class="btn btn-secondary" @onclick="@(() => _isOpen2 = false)">close</button>
	</WvpModalFooter>
</WvpModal>

<WvpModal IsOpen="_isOpen3" IgnoreClickOnBackdrop="true" Size="WvpSize.ExtraLarge" IsDraggable="true">
	<WvpModalHeader OnCloseClick="@(()=>_isOpen3 = false)" Class="p-1">Modal Title 3</WvpModalHeader>
	<WvpModalBody Class="wvp-bkg-red p-1">
		<div>some body 3</div>
<button class="btn btn-primary" @onclick="@(() => _isOpen = true)">Show Modal</button>

<button class="btn btn-primary" @onclick="@(() => _isOpen2 = true)">Show Modal 2</button>

<button class="btn btn-primary" @onclick="@(() => _isOpen3 = true)">Show Modal 3</button>
