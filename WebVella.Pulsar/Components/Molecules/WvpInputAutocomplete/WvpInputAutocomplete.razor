@namespace WebVella.Pulsar.Components
@inherits WvpInputBase
@using WebVella.Pulsar.Models
@using Microsoft.AspNetCore.Components.Web

<CascadingValue Value="this">
	<WvpDropdown IsMenuVisible="@_isDropdownVisible" Class="@Class">
		<WvpInputText Name="@Name"
						  OnKeyDown="@_onKeyDownHandler"
						  OnInput="@_onInputHandler"
						  Pattern="@Pattern"
						  Placeholder="@Placeholder"
						  Title="@Title"
						  Value="@_value"
						  ValueChanged="@_onValueChangedHandler" 
						  IsEasySubmitEnabled ="_easySubmit"
						  Id="@_inputId"/>
		@if (_filteredOptions.Count > 0 && _isDropdownVisible)
		{
			<WvpDropdownMenu HoverChanged="_ddMenuHoverChangeHandler">
				@for (int i = 0; i < _filteredOptions.Count; ++i)
				{
					var item = _filteredOptions[i];
					<WvpDropdownItem Value="@item" Class="@(_activeItemIndex == i ? "active" : "")" OnClick="() => _itemSelected(item)">@item</WvpDropdownItem>
				}

			</WvpDropdownMenu>
		}
	</WvpDropdown>
</CascadingValue>