@namespace WebVella.Pulsar.Components
@inherits WvpInputBase
@using WebVella.Pulsar.Models
@using Microsoft.AspNetCore.Components.Web
@using Newtonsoft.Json

<WvpInputAutocomplete Options="_options"
							 Value="@_filter"
							 OnInput="_onFilterInputHandler"
							 ValueChanged="_onValueChangeHandler"
							 MinLength="1"
							 Placeholder="@Placeholder"></WvpInputAutocomplete>
<div class="mt-1">
	@foreach (var option in _value)
	{
		<div class="btn btn-sm btn-secondary mr-1 mb-1">@option <a href="javascript:void(0)" @onclick="@(() => _removeValue(option))"><WvpIcon Type="WvpIconType.BsX" Class="wvp-red"></WvpIcon></a></div>
	}
</div>