@namespace WebVella.Pulsar.Components
@inherits WvpBase
@using WebVella.Pulsar.Models
@using Microsoft.AspNetCore.Components.Web

<div class="modal-header @Class ">
	<div class="@HeadingClass">@ChildContent</div>
	@if (OnCloseClick.HasDelegate)
	{
		<a href="javascript:void(0)" class="close" aria-label="Close" @onclick="OnCloseClick">
			<WvpIcon Type="WvpIconType.BsX"/>
		</a>
	}
</div>