@typeparam TItem
@namespace WebVella.Pulsar.Components
@inherits WvpDisplayBase
@using WebVella.Pulsar.Models
@using Microsoft.AspNetCore.Components.Web

<div class="@(String.Join(" ",_cssList))"
	  id="@Id"
	  title="@Title">
	@if (_value == null)
	{
		@if (String.IsNullOrWhiteSpace(ValueEmptyText))
		{
			<span>&nbsp;</span>
		}
		else
		{
			<span>@ValueEmptyText</span>
		}
	}
	else if(WvpDisplayRadioListField != null)
	{
		@WvpDisplayRadioListField(_value)
	}
	else{
		@Newtonsoft.Json.JsonConvert.SerializeObject(_value)
	}
</div>